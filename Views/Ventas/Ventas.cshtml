@{
    ViewData["Title"] = "Ventas";
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Ventas.css" asp-append-version="true" />
}

@model Qualitas.Models.DTOs.VentaDtos

<div class="dashboard-container">

    <!-- Última actualización -->
    <p class="ultima-actualizacion text-start">
        <span class="badge bg-light text-dark shadow-sm px-3 py-2">
            <i class="bi-clock-history me-2"></i>
            Última actualización: @Model.FechaUltimaActualizacion.ToString("dd/MM/yyyy")
        </span>
    </p>


    <!-- KPIs -->

    <div class="row g-4 mb-4">
        <!-- Cobranza Mes Actual -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-top-morado">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-morado text-uppercase mb-1">Cobranza</h6>
                        <h3 class="fw-bold text-morado mb-0">
                            @Model.CobranzaMesActual.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                        </h3>
                    </div>
                    <i class="bi bi-cash-coin icon-kpi text-morado"></i>
                </div>
            </div>
        </div>

        <!-- Acumulado Año Anterior Cobranza -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-top-morado">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-morado text-uppercase mb-1">Acum. 2024</h6>
                        <h3 class="fw-bold text-morado mb-0">
                            @Model.CobranzaAnioAnterior.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                        </h3>
                    </div>
                    <i class="bi bi-wallet2 icon-kpi text-morado"></i>
                </div>
            </div>
        </div>

        <!-- Acumulado Año Actual Cobranza -->

        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-top-morado">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-morado text-uppercase mb-1">Acum. 2025</h6>
                        <h3 class="fw-bold text-morado mb-0">
                            @Model.CobranzaAnioActual.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                        </h3>
                    </div>
                    <i class="bi bi-wallet-fill icon-kpi text-morado"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Segunda fila -->

    <div class="row g-4 mb-4">
        <!-- Producción Mes Actual -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-top-azul">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-morado text-uppercase mb-1">Producción</h6>
                        <h3 class="fw-bold text-morado mb-0">
                            @Model.ProduccionMesActual.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                        </h3>
                    </div>
                    <i class="bi bi-bar-chart-line icon-kpi text-azul"></i>
                </div>
            </div>
        </div>

        <!-- Acumulado Año Anterior Producción -->

        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-top-azul">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-morado text-uppercase mb-1">Acum. 2024</h6>
                        <h3 class="fw-bold text-morado mb-0">
                            @Model.ProduccionAnioAnterior.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                        </h3>
                    </div>
                    <i class="bi bi-graph-up icon-kpi text-azul"></i>
                </div>
            </div>
        </div>

        <!-- Acumulado Año Actual Producción -->
        <div class="col-md-4">

            <div class="card shadow-sm h-100 border-top-azul">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-morado text-uppercase mb-1">Acum. 2025</h6>
                        <h3 class="fw-bold text-morado mb-0">
                            @Model.ProduccionAnioActual.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                        </h3>
                    </div>
                    <i class="bi bi-graph-up-arrow icon-kpi text-azul"></i>
                </div>
            </div>
        </div>
    </div>

    
  <!-- Filtros -->

    <div class="card shadow-sm my-4">
        <div class="card-body">
            <form method="get" asp-action="Ventas" class="row g-2 align-items-end">
                <div class="col-12 col-md-3">
                    <label class="form-label fw-bold">Oficina </label>
                    <select asp-for="OficinaSeleccionada"
                            asp-items="@(new SelectList(Model.Oficinas))"
                            class="form-select form-select-sm">
                        <option value="">Todas las oficinas</option>
                    </select>
                </div>

                <div class="col-6 col-md-2">
                    <label class="form-label fw-bold">Año </label>
                    <select asp-for="AnioSeleccionado"
                            asp-items="@(new SelectList(Model.Anios))"
                            class="form-select form-select-sm">
                    </select>
                </div>

                <div class="col-12 col-md-4 d-flex gap-2">
                    <div class="btn-group w-100" role="group">
                        <input type="radio" class="btn-check" name="periodicidad" id="mensual" value="Mensual" checked>
                        <label class="btn btn-outline-primary" for="mensual">Mensual</label>

                        <input type="radio" class="btn-check" name="periodicidad" id="cuatrimestral" value="Cuatrimestral">
                        <label class="btn btn-outline-primary" for="cuatrimestral">Cuatrimestral</label>

                        <input type="radio" class="btn-check" name="periodicidad" id="anual" value="Anual">
                        <label class="btn btn-outline-primary" for="anual">Anual</label>
                    </div>
                </div>
                <div class="col-12 col-md-3">
                    <button type="submit" class="btn btn-filtro btn-sm w-100">
                        <i class="bi bi-search me-1"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla Histórica -->
    
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="toggleOrigen">
                <label class="form-check-label fw-bold" for="toggleOrigen">Mostrar Producción</label>
            </div>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mes</th>
                        <th>Año @(Model.AnioSeleccionado - 1)</th>
                        <th>Año @Model.AnioSeleccionado</th>
                        <th>Incremento</th>
                    </tr>
                </thead>
                <tbody id="tablaHistoricaBody">
                    @foreach (var row in Model.Historico)
                    {
                        <tr>
                            <td>@row.Mes</td>
                            <td>@row.ValorAnterior.ToString("C", new System.Globalization.CultureInfo("es-MX"))</td>
                            <td>@row.ValorActual.ToString("C", new System.Globalization.CultureInfo("es-MX"))</td>
                            <td class="@(row.Incremento >= 0 ? "text-success fw-bold" : "text-danger fw-bold")">
                                @row.Incremento.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <br />

<!-- Gráfica -->
<div class="card shadow-sm mb-4">
    <div class="card-body grafica-container">
        <canvas id="graficaVentas"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Gráfica
    const ctx = document.getElementById('graficaVentas').getContext('2d');
    const chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Labels)),
            datasets: [
                { label: 'Cobranza', data: @Html.Raw(Json.Serialize(Model.SerieCobranza)), backgroundColor: '#941B80' },
                { label: 'Producción', data: @Html.Raw(Json.Serialize(Model.SerieProduccion)), backgroundColor: '#0096AE' }
            ]
        },
        options: {
            responsive: true,
            plugins: { legend: { position: 'bottom' } },
            scales: { y: { beginAtZero: true } }
        }
    });

    // Toggle Cobranza/Producción
    document.addEventListener("DOMContentLoaded", function () {
        const toggle = document.getElementById("toggleOrigen");
        const label = document.querySelector("label[for='toggleOrigen']");

        if (toggle) {
            toggle.addEventListener("change", function () {
                label.textContent = toggle.checked ? "Mostrar Cobranza" : "Mostrar Producción";

                // Aquí podrías hacer una llamada AJAX para recargar la tabla
                // con Producción en lugar de Cobranza, según el estado del toggle.
                // Ejemplo:
                // fetch('/Ventas/TablaHistorica?tipo=' + (toggle.checked ? 'Produccion' : 'Cobranza'))
                //   .then(resp => resp.text())
                //   .then(html => document.getElementById("tablaHistoricaBody").innerHTML = html);
            });
        }
    });
</script>


    <!-- Tabla Parcial -->
    <div id="tablaVentas">
        @await Html.PartialAsync("_TablaVentas", Model)
    </div>
</div>