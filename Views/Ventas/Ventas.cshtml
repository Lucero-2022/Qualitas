@{
    ViewData["Title"] = "Ventas";
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Ventas.css" asp-append-version="true" />
}

@model Qualitas.Models.DTOs.VentaDtos

<div class="dashboard-container">

    <!-- Última actualización -->
    <p class="ultima-actualizacion text-start">
        <span class="badge bg-light text-dark shadow-sm px-3 py-2">
            <i class="bi-clock-history me-2"></i>
            Última actualización: @Model.FechaUltimaActualizacion.ToString("dd/MM/yyyy")
        </span>
    </p>


    <!-- KPIs -->

    <div class="row g-4 mb-4">
        <!-- Cobranza Mes Actual -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-top-morado">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-morado text-uppercase mb-1">Cobranza mes actual</h6>
                        <h3 class="fw-bold text-morado mb-0">
                            @Model.CobranzaMesActual.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                        </h3>
                    </div>
                    <i class="bi bi-cash-coin icon-kpi text-morado"></i>
                </div>
            </div>
        </div>

        <!-- Acumulado Año Anterior Cobranza -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-top-morado">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-morado text-uppercase mb-1">Acum. @(Model.AnioSeleccionado - 1)</h6>
                        <h3 class="fw-bold text-morado mb-0">
                            @Model.CobranzaAnioAnterior.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                        </h3>
                    </div>
                    <i class="bi bi-wallet2 icon-kpi text-morado"></i>
                </div>
            </div>
        </div>

        <!-- Acumulado Año Actual Cobranza -->

        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-top-morado">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-morado text-uppercase mb-1">Acum. @Model.AnioSeleccionado</h6>
                        <h3 class="fw-bold text-morado mb-0">
                            @Model.CobranzaAnioActual.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                        </h3>
                    </div>
                    <i class="bi bi-wallet-fill icon-kpi text-morado"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Segunda fila -->

    <div class="row g-4 mb-4">
        <!-- Producción Mes Actual -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-top-azul">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-morado text-uppercase mb-1">Producción mes actual</h6>
                        <h3 class="fw-bold text-morado mb-0">
                            @Model.ProduccionMesActual.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                        </h3>
                    </div>
                    <i class="bi bi-bar-chart-line icon-kpi text-azul"></i>
                </div>
            </div>
        </div>

        <!-- Acumulado Año Anterior Producción -->

        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-top-azul">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-morado text-uppercase mb-1">Acum. @(Model.AnioSeleccionado - 1)</h6>
                        <h3 class="fw-bold text-morado mb-0">
                            @Model.ProduccionAnioAnterior.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                        </h3>
                    </div>
                    <i class="bi bi-graph-up icon-kpi text-azul"></i>
                </div>
            </div>
        </div>

        <!-- Acumulado Año Actual Producción -->
        <div class="col-md-4">

            <div class="card shadow-sm h-100 border-top-azul">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-morado text-uppercase mb-1">Acum. @Model.AnioSeleccionado</h6>
                        <h3 class="fw-bold text-morado mb-0">
                            @Model.ProduccionAnioActual.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                        </h3>
                    </div>
                    <i class="bi bi-graph-up-arrow icon-kpi text-azul"></i>
                </div>
            </div>
        </div>
    </div>


    <!-- Filtros -->

    <div class="card shadow-sm my-4 p-3">
        <form method="get" asp-action="Ventas" class="row g-2 align-items-center">

            <!-- Label + Combo -->
            <div class="col-12 col-md-5 d-flex align-items-center gap-2">
                <label class="fw-bold mb-0" for="oficinaSelect" style="white-space: nowrap;">Oficina:</label>
                <select id="oficinaSelect" name="oficina" class="form-select form-select-sm flex-grow-1">
                    <option value="">Todas las oficinas</option>
                    @if (Model.Oficinas != null)
                    {
                        foreach (var oficina in Model.Oficinas)
                        {
                            <option value="@oficina" selected="@(oficina == Model.OficinaSeleccionada ? "selected" : null)">
                                @oficina
                            </option>
                        }
                    }
                </select>
            </div>

            <!-- Botones Filtrar y Borrar -->
            <div class="col-12 col-md-7 d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    <i class="bi bi-search me-1"></i> Filtrar
                </button>
                <a href="@Url.Action("Ventas")" class="btn btn-outline-secondary flex-grow-1">
                    <i class="bi bi-x-circle me-1"></i> Borrar filtro
                </a>
            </div>

        </form>
    </div>

    <!-- Tabla Histórica -->

    <div class="card shadow-sm">
        <div class="card-body">

            <!-- Toggle y Filtros dentro de la misma fila -->
            <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">

                <!-- Toggle Cobranza / Producción -->
                <form method="get" asp-action="Ventas" id="formToggle" class="d-flex align-items-center gap-2">
                    <input type="hidden" name="oficina" value="@Model.OficinaSeleccionada" />
                    <input type="hidden" name="periodicidad" value="@Model.PeriodicidadSeleccionada" />

                    <div class="form-check form-switch mb-0">
                        <input class="form-check-input" type="checkbox" id="mostrarProduccion" name="mostrarProduccion"
                            value="true" @(Model.MostrarProduccion ? "checked" : "") />
                        <label class="form-check-label fw-bold" for="mostrarProduccion">
                            @(Model.MostrarProduccion ? "Producción" : "Cobranza")
                        </label>
                    </div>
                </form>

                <!-- Filtros de periodicidad -->

                <form method="get" asp-action="Ventas" id="formPeriodicidad" class="d-flex align-items-center gap-2">
                    <input type="hidden" name="oficina" value="@Model.OficinaSeleccionada" />
                    <input type="hidden" name="mostrarProduccion" value="@(Model.MostrarProduccion)" />

                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="periodicidad" id="mensual" value="Mensual"
                            @(Model.PeriodicidadSeleccionada == "Mensual" ? "checked" : "")>
                        <label class="btn btn-outline-primary" for="mensual">Mensual</label>

                        <input type="radio" class="btn-check" name="periodicidad" id="cuatrimestral"
                            value="Cuatrimestral" @(Model.PeriodicidadSeleccionada == "Cuatrimestral" ? "checked" : "")>
                        <label class="btn btn-outline-primary" for="cuatrimestral">Cuatrimestral</label>

                        <input type="radio" class="btn-check" name="periodicidad" id="anual" value="Anual"
                            @(Model.PeriodicidadSeleccionada == "Anual" ? "checked" : "")>
                        <label class="btn btn-outline-primary" for="anual">Anual</label>
                    </div>
                </form>
            </div>

            <!-- Tabla Histórica -->

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="font-weight:600;">@(Model.MostrarProduccion ? " PRODUCCIÒN" : "COBRANZA")</th>
                        <th style="font-weight:600;">@(DateTime.Now.Year - 1)</th>
                        <th style="font-weight:600;">@DateTime.Now.Year</th>
                        <th style="font-weight:600;">INCREM</th>
                        <th style="font-weight:600;">%INCREM</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Historico != null && Model.Historico.Any())
                    {
                        foreach (var row in Model.Historico)
                        {
                            <tr>
                                <td>@row.Mes</td>
                                <td>@row.ValorAnterior.ToString("C", new System.Globalization.CultureInfo("es-MX"))</td>
                                <td>@row.ValorActual.ToString("C", new System.Globalization.CultureInfo("es-MX"))</td>
                                <td class="@(row.Incremento >= 0 ? "text-success fw-bold" : "text-danger fw-bold")">
                                    @row.Incremento.ToString("C", new System.Globalization.CultureInfo("es-MX"))
                                </td>
                                <td class="@(row.IncrementoPorcentaje >= 0 ? "text-success fw-bold" : "text-danger fw-bold")">
                                    @row.IncrementoPorcentaje.ToString("0.##")%
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No hay datos históricos para mostrar</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Toggle Cobranza/Producción envía el form automáticamente
        document.getElementById("mostrarProduccion")?.addEventListener("change", function () {
            document.getElementById("formToggle").submit();
        });

        // Filtros de periodicidad envían form automáticamente al cambiar
        document.querySelectorAll('#formPeriodicidad input[name="periodicidad"]').forEach(radio => {
            radio.addEventListener('change', function () {
                this.closest('form').submit();
            });
        });
    </script>
    <br />



    <!-- Gráfica -->

    <div class="card shadow-sm mb-4">
        <div class="card-body grafica-container">
            <canvas id="graficaVentas"></canvas>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>

        // Gráfica
        const ctx = document.getElementById('graficaVentas')?.getContext('2d');
        if (ctx) {
            const chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.Labels)),
                    datasets: [
                        { label: 'Cobranza', data: @Html.Raw(Json.Serialize(Model.SerieCobranza)), backgroundColor: '#941B80' },
                        { label: 'Producción', data: @Html.Raw(Json.Serialize(Model.SerieProduccion)), backgroundColor: '#0096AE' }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: { legend: { position: 'bottom' } },
                    scales: { y: { beginAtZero: true } }
                }
            });
        }

        // Enviar formulario automáticamente al cambiar el toggle (usa el form que está justo encima de la tabla)
        document.getElementById("mostrarProduccion")?.addEventListener("change", function () {
            // encuentra el formulario más cercano (el que contiene los inputs hidden de filtros)
            const f = this.closest("form");
            if (f) f.submit();
        });
    </script>


    <!-- Tabla Parcial -->
    <div id="tablaVentas">
        @await Html.PartialAsync("_TablaVentas", Model)
    </div>
</div>