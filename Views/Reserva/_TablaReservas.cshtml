@model Qualitas.Models.DTOs.ReservaDTOs

<div class="table-responsive shadow-sm tabla-centrada amplia">
    <table class="table table-custom align-middle">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Póliza</th>
                <th>Agente</th>
                <th>Oficina</th>
                <th>Cobertura</th>
                <th class="text-end">Ajuste</th>
            </tr>
        </thead>
        <tbody>
        @if (Model.Reservas != null && Model.Reservas.Any())
        {
            foreach (var item in Model.Reservas)
            {
                <tr>
                    <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@item.Poliza</td>
                    <td>@item.Agente</td>
                    <td>@item.NombreOficina</td>
                    <td>@item.Cobertura</td>
                    <td class="text-end">@item.Ajuste.ToString("C")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No hay reservas disponibles</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<!-- Paginación -->
@if (Model.TotalPaginas > 1)
{
    <nav aria-label="Paginación de reservas">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.PaginaActual == 1 ? "disabled" : "")">
                <a class="page-link"
                   href="@Url.Action("Reservas", new { page = Model.PaginaActual - 1, fecha = Model.FechaFiltro, busqueda = Model.Busqueda, oficina = Model.Oficina })">
                    Anterior
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPaginas; i++)
            {
                <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Reservas", new { page = i, fecha = Model.FechaFiltro, busqueda = Model.Busqueda, oficina = Model.Oficina })">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.PaginaActual == Model.TotalPaginas ? "disabled" : "")">
                <a class="page-link"
                   href="@Url.Action("Reservas", new { page = Model.PaginaActual + 1, fecha = Model.FechaFiltro, busqueda = Model.Busqueda, oficina = Model.Oficina })">
                    Siguiente
                </a>
            </li>
        </ul>
    </nav>
}
